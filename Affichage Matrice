#include <iostream>

using namespace std;

int main()
{
    int M[3][4];
    int i,j(0);

    for (i=0;i<=2;i++)
    {
        for (j=0;j<=3;j++)
        {
            cout<<"Saisir M["<<i<<"]["<<j<<"] = ";
            cin>>M[i][j];
            cout<<endl;
        }
    }
    cout<<"vous avez saisi :"<<endl;
    for (i=0;i<=2;i++)
    {
        cout<<"[";
        for (j=0;j<=3;j++)
        {
            if (j==3)
            {
                cout<<M[i][j];
            }
            else
            {
                cout<<M[i][j]<<"\t";
            }
        }
    cout<<"]"<<endl;
    }
    return 0;
}
